<div>
  <div>
    <h1>
      <%= @user.first_name %> <%= @user.last_name %>'s bookmarks
    </h1>
  </div>
  <form action="/insert_bookmark" method="post">

    <select id="movie_id_box" name="query_movie_id" >
      <% Movie.all.order(:name).each do |a_movie| %>
          <option value="<%= a_movie.id%>">
            <%= a_movie.title%>
          </option>
      <% end%>
    </select>

    <button>
      Bookmark this movie!
    </button>
  </form>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>

        <td>
          <%= a_bookmark.movie_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>

        <td>
          <a href="/delete_bookmark/<%=a_bookmark.id%>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
